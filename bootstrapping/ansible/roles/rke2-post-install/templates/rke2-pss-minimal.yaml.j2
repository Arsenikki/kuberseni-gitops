apiVersion: apiserver.config.k8s.io/v1
kind: AdmissionConfiguration
plugins:
- name: PodSecurity
  configuration:
    apiVersion: pod-security.admission.config.k8s.io/v1beta1
    kind: PodSecurityConfiguration
    defaults:
      enforce: "{{ pod_security_standards_enforce}}"
      enforce-version: "latest"
      audit: "{{ pod_security_standards_audit}}"
      audit-version: "latest"
      warn: "{{ pod_security_standards_warn}}"
      warn-version: "latest"
    exemptions:
      usernames: []
      runtimeClasses: []
      namespaces: {{ pod_security_standards_exemptions_list }}