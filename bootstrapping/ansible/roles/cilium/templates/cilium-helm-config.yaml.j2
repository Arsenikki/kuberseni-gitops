apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: cilium
  namespace: kube-system
spec:
  repo: https://helm.cilium.io
  chart: cilium
  targetNamespace: kube-system
  version: v{{ cilium_version }}
  bootstrap: true
  valuesContent: |-
    tag: v{{ cilium_version }}
    pullPolicy: IfNotPresent
    kubeProxyReplacement: strict
    k8sServiceHost: {{ kube_vip_address }}
    k8sServicePort: 6443
    hubble:
      enabled: true
      ui:
        enabled: true
      relay:
        enabled: true
      metrics:
        enabled:
        - dns
        - drop
        - tcp
        - flow
        - port-distribution
        - icmp
        - http
